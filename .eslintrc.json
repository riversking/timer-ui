{
  "extends": "standard",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [ "html", "standard" ],
  "rules": {
    "quotes": 0,
    "no-console": 1,
    "no-debugger": 1,
    "no-var": 2,
    "semi": [
      2,
      "never"
    ],
    "camelcase": 2,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "no-irregular-whitespace": 2,
    "no-regex-spaces": 2,
    "no-mixed-spaces-and-tabs": [
      2,
      "smart-tabs"
    ],
    "no-trailing-spaces": 1,
    "no-undef": 1,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "space-before-function-paren": [0, "always"],
    "import/no-unresolved": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0
  }
}
